def is_prime(num):
    if num <= 1:
        return False
    if num <= 3:
        return True
    if num % 2 == 0 or num % 3 == 0:
        return False
    i = 5
    while i * i <= num:
        if num % i == 0 or num % (i + 2) == 0:
            return False
        i += 6
    return True

def smallest_prime_greater_than(N):
    candidate = N + 1
    while True:
        if is_prime(candidate):
            return candidate
        candidate += 1

# Example usage
if __name__ == "__main__":
    import sys
    
    N = int(sys.stdin.readline().strip())  # Read the input integer N
    result = smallest_prime_greater_than(N)
    print(result)
